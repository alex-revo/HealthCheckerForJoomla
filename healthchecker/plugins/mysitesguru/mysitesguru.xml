<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" group="healthchecker" method="upgrade">
    <name>plg_healthchecker_mysitesguru</name>
    <author>mySites.guru / Phil E. Taylor</author>
    <creationDate>2026-02-27</creationDate>
    <copyright>(C) 2026 mySites.guru / Phil E. Taylor</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>phil@phil-taylor.com</authorEmail>
    <authorUrl>https://mysites.guru</authorUrl>
    <version>3.6.1</version>
    <description>PLG_HEALTHCHECKER_MYSITESGURU_XML_DESCRIPTION</description>
    <namespace path="src">MySitesGuru\HealthChecker\Plugin\MySitesGuru</namespace>

    <files>
        <folder plugin="mysitesguru">services</folder>
        <folder>src</folder>
        <folder>language</folder>
    </files>

    <media destination="plg_healthchecker_mysitesguru" folder="media">
        <filename>logo.png</filename>
    </media>

    <languages folder="language">
        <language tag="en-GB">en-GB/plg_healthchecker_mysitesguru.ini</language>
        <language tag="en-GB">en-GB/plg_healthchecker_mysitesguru.sys.ini</language>
        <language tag="es-ES">es-ES/plg_healthchecker_mysitesguru.ini</language>
        <language tag="es-ES">es-ES/plg_healthchecker_mysitesguru.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset
                name="checks"
                label="PLG_HEALTHCHECKER_MYSITESGURU_FIELDSET_CHECKS_LABEL"
                description="PLG_HEALTHCHECKER_MYSITESGURU_FIELDSET_CHECKS_DESC"
            >
                <field
                    name="check_mysitesguru_connection"
                    type="radio"
                    label="COM_HEALTHCHECKER_CHECK_MYSITESGURU_CONNECTION_TITLE"
                    class="btn-group btn-group-yesno"
                    default="1"
                >
                    <option value="1">JENABLED</option>
                    <option value="0">JDISABLED</option>
                </field>
                <field
                    name="export_mysitesguru_connection"
                    type="list"
                    label="PLG_HEALTHCHECKER_MYSITESGURU_EXPORT_VISIBILITY"
                    default="always"
                    class="form-select-sm"
                >
                    <option value="always">PLG_HEALTHCHECKER_MYSITESGURU_EXPORT_ALWAYS</option>
                    <option value="issues">PLG_HEALTHCHECKER_MYSITESGURU_EXPORT_ISSUES_ONLY</option>
                    <option value="never">PLG_HEALTHCHECKER_MYSITESGURU_EXPORT_NEVER</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server
            type="extension"
            priority="1"
            name="Health Checker - mySites.guru Plugin"
        >https://www.joomlahealthchecker.com/update/plg_healthchecker_mysitesguru.xml</server>
    </updateservers>

    <client>0</client>
</extension>
